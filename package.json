{
    "name": "flag-it",
    "displayName": "Flag It",
    "description": "A VSCode extension to flag/bookmark files with comments for easy access",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.56.0",
        "node": ">=20",
        "pnpm": "10.6.5"
    },
    "icon": "resources/icon.png",
    "publisher": "RyanDowling",
    "repository": "https://github.com/RyanTheAllmighty/flag-it",
    "packageManager": "pnpm@10.6.5",
    "categories": [
        "Other"
    ],
    "keywords": [
        "flag",
        "bookmark",
        "comment",
        "save"
    ],
    "sponsor": {
        "url": "https://github.com/sponsors/RyanTheAllmighty"
    },
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "flag-it.flagFile",
                "title": "Flag File",
                "icon": "$(edit)"
            },
            {
                "command": "flag-it.removeFlagFromFile",
                "title": "Remove Flag",
                "icon": "$(trash)"
            },
            {
                "command": "flag-it.editComment",
                "title": "Edit Comment",
                "icon": "$(edit)"
            },
            {
                "command": "flag-it.clearAllFlags",
                "title": "Clear All Flags"
            },
            {
                "command": "flag-it.openFlaggedFile",
                "title": "Open File"
            },
            {
                "command": "flag-it.createFolder",
                "title": "Create Folder",
                "icon": "$(new-folder)"
            },
            {
                "command": "flag-it.deleteFolder",
                "title": "Delete Folder",
                "icon": "$(trash)"
            },
            {
                "command": "flag-it.renameFolder",
                "title": "Rename Folder",
                "icon": "$(edit)"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "flag-it.flagFile",
                    "group": "navigation"
                }
            ],
            "editor/title/context": [
                {
                    "command": "flag-it.flagFile",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "flag-it.editComment",
                    "when": "view == flaggedFiles && viewItem == flaggedFile",
                    "group": "inline"
                },
                {
                    "command": "flag-it.removeFlagFromFile",
                    "when": "view == flaggedFiles && viewItem == flaggedFile",
                    "group": "inline"
                },
                {
                    "command": "flag-it.editComment",
                    "when": "view == flaggedFiles && viewItem == flaggedFile"
                },
                {
                    "command": "flag-it.removeFlagFromFile",
                    "when": "view == flaggedFiles && viewItem == flaggedFile"
                },
                {
                    "command": "flag-it.renameFolder",
                    "when": "view == flaggedFiles && viewItem == flagFolder",
                    "group": "inline"
                },
                {
                    "command": "flag-it.deleteFolder",
                    "when": "view == flaggedFiles && viewItem == flagFolder",
                    "group": "inline"
                },
                {
                    "command": "flag-it.renameFolder",
                    "when": "view == flaggedFiles && viewItem == flagFolder"
                },
                {
                    "command": "flag-it.createFolder",
                    "when": "view == flaggedFiles && viewItem == flagFolder"
                },
                {
                    "command": "flag-it.deleteFolder",
                    "when": "view == flaggedFiles && viewItem == flagFolder"
                }
            ],
            "view/title": [
                {
                    "command": "flag-it.createFolder",
                    "when": "view == flaggedFiles",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "flag-it-sidebar",
                    "title": "Flag It",
                    "icon": "resources/flag.svg"
                }
            ]
        },
        "views": {
            "flag-it-sidebar": [
                {
                    "id": "flaggedFiles",
                    "name": "Flagged Files",
                    "type": "tree",
                    "order": 1
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "flaggedFiles",
                "contents": "No files flagged yet.\n\nFlag files to quickly access them later with optional comments.\n\n[Flag Current File](command:flag-it.flagFile)\n\nYou can flag files by:\n- Right-clicking a file in Explorer\n- Right-clicking an editor tab\n- Using the Command Palette (Ctrl+Shift+P)",
                "when": "!flag-it:hasFlaggedFiles"
            }
        ],
        "configuration": {
            "title": "Flag It",
            "properties": {
                "flag-it.externalFilesSectionOrder": {
                    "type": "number",
                    "default": 1000,
                    "description": "Order of the external files section. Higher values move the section down."
                }
            }
        }
    },
    "lint-staged": {
        "*.json": [
            "prettier --write"
        ],
        "*.ts": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "scripts": {
        "check-types": "tsc --noEmit",
        "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
        "compile-tests": "tsc -p . --outDir out",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
        "prepare": "husky",
        "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
        "prettier": "prettier",
        "publish": "pnpm vsce publish --no-dependencies",
        "test": "vscode-test",
        "vscode:prepublish": "pnpm run package",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "watch-tests": "tsc -p . -w --outDir out"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@eslint/js": "^9.23.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^8.28.0",
        "@typescript-eslint/parser": "^8.28.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "esbuild": "^0.25.1",
        "eslint": "^9.23.0",
        "eslint-plugin-perfectionist": "^4.10.1",
        "eslint-plugin-unused-imports": "^4.1.4",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.28.0"
    }
}
